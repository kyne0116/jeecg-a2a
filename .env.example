# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# A2A Platform Configuration
PLATFORM_NAME=JEECG A2A Platform
PLATFORM_VERSION=1.0.0
PLATFORM_DESCRIPTION=Enterprise A2A Protocol Platform

# Agent Configuration
AGENT_TIMEOUT=30
MAX_CONCURRENT_TASKS=100
AGENT_HEALTH_CHECK_INTERVAL=60
AUTO_DISCOVERY_ENABLED=true

# AI Provider Configuration (Optional - for intelligent routing)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./jeecg_a2a.db
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Chat UI Configuration
CHAT_HISTORY_LIMIT=1000
SESSION_TIMEOUT=3600
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE=10485760  # 10MB

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
